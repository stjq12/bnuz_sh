/* pages/sell/spDetail/spDetail.wxss */
.sellerMes{
  width: 92vw;
  margin: 4vw;
  padding-bottom: 3vw;
  display: flex;
  border-bottom: 1px solid rgba(100,100,100,0.2);
}
.sellerMes>image{
  /* display: inline-block; */
  /* vertical-align: top; */
  width: 12vw;
  height: 12vw;
  border-radius: 50%;
}
.sellerMes>view{
  /* display: inline-block; */
  vertical-align: top;
  width: 80vw;
  height: 12vw;
  margin-left: 3vw;
}
.sellerMes>view :first-child{
  line-height: 6vw;
  height: 6vw;
  font-size: large;
}
.sellerMes>view :last-child{
  color: #888;
  font-size: small;
  line-height: 6vw;
}
.priceMes{
  display: flex;
  padding: 1vw 4vw 1vw 4vw;
}
.priceMes :first-child{
  color: red;
  height: 8vw;
  line-height: 8vw;
}
.priceMes :nth-child(2){
  color: red;
  font-size: x-large;
  height: 8vw;
  line-height: 8vw;
}
.otherMes{
  margin-left: 3vw;
  margin-top: 1vw;
  height: 6vw;
  line-height: 6vw;
  font-size: x-small;
  padding: 1rpx 18rpx 1rpx 18rpx;
  border: 1rpx solid rgba(0,0,0,0.1);
  border-radius: 25rpx;
}
.detail{
  width: 92vw;
  padding: 3vw 4vw 3vw 4vw;
}
.spPic{
  padding: 4vw;
  margin-bottom: 16vw;
}
.spPic>image{
  width: 92vw;
  border-radius: 10rpx;
  margin-bottom: 3vw;
}
.operation{
  position: fixed;
  z-index: 2;
  width: 100vw;
  height: 12vw;
  padding: 3vw 3vw 2vw 3vw;
  bottom: 0;
  left: 0;
  background-color: #f2f2f2;
  display: flex;
}
.operateBtn{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 12vw;
}
.operateBtn>image{
  height: 6vw;
  width: 6vw;
}
.operateBtn>view{
  height: 5vw;
  line-height: 5vw;
  font-size: small;
  color: #515151;
}
.wants{
  height: 8vw;
  width: 22vw;
  line-height: 8vw;
  margin: 2vw 0 0 35vw;
  text-align: center;
  font-size: 14px;
  background-color: #22544c;
  color: white;
  border-radius: 30rpx;
}
