/* pages/sell/tradSuccess/tradSuccess.wxss */
.page{
  background-color: white;
  max-height: 100vh;
  overflow: hidden;
  position: relative;
}
.success{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 28vh;
}
.icon{
  font-size: x-large;
  color: #555;
  margin-top: 2vh;
}
.operation{
  width: 92vw;
  height: 8vw;
  padding: 4vw;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
}
.operation>view{
  flex: 1;
  text-align: center;
  color: #555;
}