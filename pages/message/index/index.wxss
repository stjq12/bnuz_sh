/* pages/message/index/index.wxss */
.header {
  width: 100vw;
  height: 6vh;
  background-color: #f2f2f2;
  /* background-color: white; */
  padding: 0 0rpx 0rpx 0rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.tapName view {
  display: inline-block;
  line-height: 6vh;
  text-align: center;
}
.border{
  display: inline-block;
  vertical-align: top;
  width: 10vw;
  height: 6vh;
  line-height: 6vh;
}

.notSelect {
  color: #888;
  text-decoration:underline;
  border-bottom: 2px solid #f2f2f2;
}

.selectTap {
  color: #22544c;
  text-decoration:underline;
  font-weight: bold;
  border-bottom: 2px solid #22544c;
}
.tapSwiper{
  height: 94vh;
}
.tap{
  height: 94vh;
  white-space: nowrap;
}
.seach {
  width: 95%;
  height: 60rpx;
  margin: 0 auto;
  background-color: white;
  border-radius: 30rpx;
  overflow: hidden;
  margin-bottom: 5vw;
}

.seach input {
  width: 86%;
  height: 100%;
  margin-left: 20rpx;
  float: left;
}

.seach view {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  float: left;
}

.seach view image {
  width: 100%;
  height: 100%;
}

scroll-view {
  width: 96vw;
  margin: 0 auto;
  white-space: nowrap;
  height: 26vw;
  overflow: hidden;
}


.hrMes{
  height: 2px;
  width: 100%;
  background-color: white;
  margin: 0 auto;
}
.row:last-of-type .hrMes {
  border: 0;
}

.messageBox {
  display: inline-block;
  width: 96vw;
  height: 20vw;
  margin: 0 auto;
  padding: 3vw 0 3vw 0;
  background-color: white;
}

.headPhoto {
  height: 12vw;
  width: 12vw;
  border: 1px solid rgba(0,0,0,0.1);
  margin-left: 4vw;
  border-radius: 50%;
  background-color: #f2f2f2;
  float: left;
  overflow: hidden;
  /* flex: 1; */
}
.headPhoto image{
  width: 100%;
  height: 100%;
}

.chatMes {
  display: flex;
  flex-direction: column;
  margin-left: 4vw;
  float: left;
  width: 48vw;
}

.chatMes :nth-child(2) {
  width: 48vw;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: small;
}

.chatMes :nth-child(2) {
  color: #999;
  margin-top: 10rpx;
  font-size: small;
}

.chatMes :last-child {
  color: #999;
  font-size: small;
  margin-top: 10rpx;
}

.spPhoto {
  float: left;
  width: 18vw;
  height: 18vw;
  margin-left: 6vw;
  background-color: red;
  border-radius: 1vw;
  overflow: hidden;
}
.spPhoto image{
  width: 100%;
  height: 100%;
  object-fit:cover
}

.mesDel {
  display: inline-block;
  vertical-align: top;
  text-align: center;
  background-color: red;
  width: 20vw;
  height: 26vw;
  line-height: 26vw;
  color: white;
}

/* 通知 */
.nofitication{
  width: 100%;
  height: 70vw;
  margin-bottom: 3vw;
}
.noTimeRow{
  width: 100%;
  text-align: center;
  padding: 5vw 0 5vw 0;
}
.noTime{
  width: 40vw;
  line-height: 5vw;
  margin: 0 auto;
  background-color: rgba(0,0,0,0.2);
  color: white;
  font-size: small;
  border-radius: 6rpx;
}
.noBox{
  width: 92vw;
  height: 58vw;
  margin: 0 auto;
  background-color: white;
  border-radius: 8rpx;
}
.noTitle{
  line-height: 7vw;
  padding: 3vw 0 3vw 3vw;
}
.noTitle :last-child{
  color: #888;
  font-size: small;
}
.noPhoto{
  height: 35vw;
  width: 86vw;
  padding: 0 3vw 0 3vw;
}
.noPhoto image{
  width: 100%;
  height: 100%;
}
